# Spot Edit Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Backend Configuration
# ============================================

# Server Port
PORT=8000

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost:3000

# ============================================
# AI/LLM Configuration
# ============================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Choose which LLM provider to use: "openai" or "anthropic"
LLM_PROVIDER=openai

# Model configuration
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# Storage Configuration
# ============================================

# Path for storing templates and uploads
STORAGE_PATH=/app/storage

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.txt,.pdf,.docx

# ============================================
# Frontend Configuration
# ============================================

# Backend API URL (used by frontend)
VITE_API_URL=http://localhost:8000

# ============================================
# Development Configuration
# ============================================

# Enable debug mode
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Security (Optional - for production)
# ============================================

# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-in-production

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=change-me-in-production

# ============================================
# Database (Optional - for future use)
# ============================================

# If switching from file-based to database storage
# DATABASE_URL=postgresql://user:password@localhost:5432/spotadit
# DATABASE_URL=sqlite:///./spotadit.db
